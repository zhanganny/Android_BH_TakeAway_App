<!--            type="com.example.basicpage.store_index" />-->
<!--    </data>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/dragient"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <!--返回键-->
                <Button
                    android:id="@+id/back"
                    android:layout_width="34dp"
                    android:layout_height="50dp"
                    android:background="@drawable/back"
                    android:scaleType="fitXY" />

                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_round_corner"
                    android:hint="酸菜鱼，牛肉面，披萨..."
                    android:textColorHint="#95A1AA" />

                <!--用户头像-->
                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/user"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <!--店铺照片-->
                <ImageView
                    android:id="@+id/store_image"
                    android:background="@drawable/store"
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="100dp"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:text="店铺名称"
                            android:textStyle="bold"
                            android:textSize="40sp"
                            android:gravity="left" />
                        <!--android:text="@{store.store_name}"-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@drawable/location"
                                android:layout_marginRight="2dip"
                                android:layout_gravity="bottom|right"
                                android:gravity="bottom" />

                            <TextView
                                android:id="@+id/store_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|right"
                                android:text="店铺位置"
                                android:textSize="15sp" />
                                <!--android:text="@{store.store_location}"-->
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="联系方式："
                            android:gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="123456789"
                            android:gravity="center_vertical"/>

                        <android.widget.Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/phone"/>
                    </LinearLayout>
                    <RatingBar
                        android:id="@+id/store_RatingBar"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="4.5"/>
                    <!--android:rating="@{store.rank}"-->

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="价格区间:"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:background="@drawable/background_round_corner"
                android:hint="最低价(元)"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="~"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/background_round_corner"
                android:hint="最高价(元)"
                android:textSize="10dp">
            </EditText>

            <Spinner
                android:id="@+id/spinner_rank"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_round_corner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/store_ListView"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:scrollbars="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:id="@+id/car"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/car"></ImageView>
                <!-- />-->

                <TextView
                    android:id="@+id/countnum"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <android.widget.Button
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:background="@drawable/button_round_confirm"
                android:text="查看购物车"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20sp"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/total_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="￥0.0"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
                <!---->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="另需配送费5.0元"
                    android:textSize="12sp" />

            </LinearLayout>

            <android.widget.Button
                android:id="@+id/pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="结算"
                android:background="@drawable/button_round_confirm"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
    </layout>
